@section Header {                                                    
<div class="container">
    <div class="d-flex justify-content-between align-items-center">
        <h1 class="h3 mb-0 text-white">КТС - Разработка ПО</h1>
        <nav>
            <ul class="nav">
                <li class="nav-item"><a href="#" class="nav-link text-white">Услуги</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Портфолио</a></li>
                <li class="nav-item"><a href="#" class="nav-link text-white">Контакты</a></li>
            </ul>
        </nav>
    </div>
</div>
}

@{
    int type = 0;
    if(ViewData["DevType"] is not null) type = Int32.Parse(@ViewData["DevType"].ToString());
    Layout = "_LayoutMain";
}

<div>
    <div class="row g-3">
        <h2 class="h2 mb-3">Оставьте заявку</h2>
        <form class="bg-white p-4 rounded shadow" method="post" action="/Main/RequestHandler">
            <fieldset>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="DevType" value="1" id="radioWebSites"/>
                    <label class="form-check-label" for="radioWebSites">Web sites</label>
                </div>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="DevType" value="2" id="AI"/>
                    <label class="form-check-label" for="AI">Android/iOS</label>
                </div>
                <div class="form-check-inline">
                    <input class="form-check-input" type="radio" name="DevType" value="3" id="DevOps"/>
                    <label class="form-check-label" for="DevOps">DevOps</label>
                </div>
            </fieldset>
            <div class="mb-3">
                <label class="form-label">Обращение</label>
                <input class="form-control" type="text" name="content"/>
            </div>
            <div class="d-flex justify-content-end">
                <input class="btn btn-outline-success mb-3" type="submit"/>
            </div>
        </form>
        <script>
            window.onload = function(){
                let radios = document.getElementsByName('DevType');
                if(@type != 0) radios[@type-1].checked  = true;
            }
        </script>
    </div>
</div>