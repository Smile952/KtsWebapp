@{
    Layout = "_LayoutMain";
}

<div>
    <div class="row g-3">
        <h2 class="h2 mb-3">Оставьте заявку</h2>
        <form class="bg-white p-4 rounded shadow">
            <div class="mb-3">
                <label class="form-label">Ваше имя</label>
                <input class="form-control" type="text" />
            </div>
            <div class="mb-3">
                <label class="form-label">Ваше email</label>
                <input class="form-control" type="email" />
            </div>
            <div class="mb-3">
                <label class="form-label">Обращение</label>
                <input class="form-control" type="text" />
            </div>
            <div class="d-flex justify-content-end">
                <input class="btn btn-outline-success mb-3" type="submit"/>
            </div>
        </form>
    </div>
</div>